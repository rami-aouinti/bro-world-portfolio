# Session configuration
SESSION_COOKIE_NAME=bro_world_session
CSRF_COOKIE_NAME=bro_world_csrf
SESSION_MAX_AGE=86400

# External API endpoints
AUTH_API_BASE=https://bro-world.org/api/v1
NUXT_PUBLIC_API_BASE=https://resume.bro-world.org/api

# Authentication cookie overrides (optional)
AUTH_SESSION_TOKEN_COOKIE_NAME=auth_session_token
AUTH_TOKEN_PRESENCE_COOKIE_NAME=auth_token_present
AUTH_USER_COOKIE_NAME=auth_user

# Default admin credentials
ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD=ChangeMe123!

# Database configuration
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/bro_world"

# External services
WORKFLOW_ENDPOINT=https://api.workflow.example
WORKFLOW_API_KEY=your-workflow-api-key
RESEND_API_KEY=your-resend-api-key
# This address will appear as the sender for contact form submissions.
RESEND_FROM=contact@your-domain.com
# Optional override. Defaults to RESEND_FROM if not provided.
RESEND_TO=

# Content rendering
NUXT_PUBLIC_USE_MOCK_CONTENT=true
